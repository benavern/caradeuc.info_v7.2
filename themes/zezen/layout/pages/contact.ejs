<div class="container">
  <div class="grid">
    <div class="grid-item m-1-3">
      <div class="box">
        <%- page.content %>
      </div>
    </div>

    <div class="grid-item m-2-3">
      <div class="box">
        <form name="contact" method="POST" netlify>
          <%- partial('../components/input', { type: 'text', label: 'Nom', icone: 'person', name: 'name' }) %>

          <%- partial('../components/input', { type: 'email', label: 'Email', icone: 'mail', name: 'email' }) %>

          <%- partial('../components/input', { type: 'textarea', label: 'Message', name: 'message' }) %>

          <div data-netlify-recaptcha></div>

          <p>
            <button type=”submit” class="btn bg-primary color-white icon-left">
              <%- partial('../components/icone', { name: 'mail', color: '#fff' }) %>

              Send
            </button>
          </p>
        </form>
      </div>
    </div>
  </div>
</div>
