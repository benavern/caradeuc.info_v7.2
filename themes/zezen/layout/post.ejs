<%- partial('partials/header')%>


<div id="post" class="has-triangle has-triangle-after">
  <%- partial('./components/triangle', {color: 'white'}) %>

  <div class="container">

    <div class="grid">
      <article class="grid-item m-5-6 post-content">
        <div class="box">
          <%- page.content %>

          <hr>

          <%- partial('./partials/post/nextprevious.ejs') %>
        </div>
      </article>

      <aside class="grid-item m-1-6 post-aside">
        <div class="box">
          <%- partial('partials/post/aside') %>
        </div>
      </aside>

      <section class="grid-item m-5-6 post-comments">
        <div class="box">
          <%- partial('partials/post/comments') %>
        </div>
      </section>
    </div>
  </div>
</div>
