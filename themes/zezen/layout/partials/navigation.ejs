<div id="navigation">
  <div class="container">
    <div class="grid">
      <div class="grid-item logo-wrapper">
        <a href="<%- url_for('/') %>"  class="btn btn-link">
          <%- image_tag('images/avatar.png', {alt: 'Benjamin CARADEUC', class: 'avatar'}) %>
        </a>
      </div>

      <div class="grid-item nav-wrapper">
        <nav>
          <% site.pages.forEach(function (page) { %>
            <a href="<%- url_for(page.path) %>" class="btn btn-link <%= is_home() ? 'color-gray-dark' : 'color-white' %>">
              <%= page.title %>
            </a>
          <% }) %>
        </nav>
      </div>
    </div>
  </div>
</div>
