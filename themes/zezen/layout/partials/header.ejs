<header id="page-header" style="background-image: url(<%= url_for(page.header_img || theme.default_header_img) %>)">
  <div class="container">
    <h1><%= titlecase(page.title) %></h1>

    <% if (page.author) { %>
      <small><b><%= page.author %></b></small>
    <% } %>

    <% if (is_post() && page.date) { %>
      <small>le <%= date(page.date, 'DD/MM/YYYY') %></small>
    <% } %>
  </div>
</header>
